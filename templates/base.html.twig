<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link crossorigin="anonymous" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" rel="stylesheet">
        <title>
            {% block title %}Funko Market{% endblock %}
        </title>
        {% block stylesheets %}

        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarTogglerDemo01" data-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand" href="{{ path('home')}}">FunkoMarket</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home')}}">
                            Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('produit_index')}}">Liste des produits</a>
                    </li>
                </ul>
            </div>
            <div class="nav-bar-center" styles="text-align: center;">
            {{ render(controller(
                'App\\Controller\\SearchController::searchBar'
            ))}}
               
            {% if app.user %}
                <div aria-label="Basic example" class="btn-group" role="group">
                    <a class="btn btn-secondary" type="button" href="{{ path('app_logout')}}">Deconnexion</a>
                </div>
            {% else %}
                <div aria-label="Basic example" class="btn-group" role="group">
                    <a class="btn btn-secondary" type="button" href="{{ path('app_login')}}">Connexion</a>
                    <a class="btn btn-secondary" type="button" href="{{ path('app_register')}}">S'inscrire</a>
                </div>
            {% endif %}
            
                <a href="{{ path('cart')}}">Panier</a>
            </div>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
             <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        
        {% endblock %}
    </body>
</html>
