{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Produit
{% endblock %}

{% block body %}
    <h1>Funko Pop - {{ produit.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ produit.numero }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ produit.taille }}</td>
            </tr>
            <tr>
                <th>Exclusive</th>
                <td>{{ produit.exclusive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ produit.annee }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
